# HardbanRecords Lab - Environment Variables Template
# Copy to .env and fill in your actual values

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/hardbanrecords

# =================================================================
# SUPABASE STORAGE CONFIGURATION
# =================================================================
# Supabase project URL (e.g., https://your-project.supabase.co)
SUPABASE_URL=https://your-project.supabase.co

# Supabase service role key (secret)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Supabase anon public key
SUPABASE_ANON_KEY=your_supabase_anon_key

# Storage bucket name for file uploads
SUPABASE_BUCKET_NAME=hardbanrecords-files

# =================================================================
# JWT AUTHENTICATION
# =================================================================
# JWT secret for token signing (generate a strong random string)
JWT_SECRET=your_very_strong_jwt_secret_at_least_32_characters

# Refresh token secret (different from JWT_SECRET)
REFRESH_TOKEN_SECRET=your_very_strong_refresh_token_secret_at_least_32_characters

# Token expiration times
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# =================================================================
# AI SERVICES CONFIGURATION
# =================================================================
# Google AI API key for AI features
GOOGLE_API_KEY=your_google_ai_api_key

# Groq API key for AI chat features
GROQ_API_KEY=your_groq_api_key

# =================================================================
# SERVER CONFIGURATION
# =================================================================
# Server port
PORT=3001

# Node environment
NODE_ENV=development

# CORS origins (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# =================================================================
# EXTERNAL INTEGRATIONS
# =================================================================
# Music Distribution Platforms
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
APPLE_MUSIC_KEY_ID=your_apple_music_key_id
APPLE_MUSIC_TEAM_ID=your_apple_music_team_id
APPLE_MUSIC_PRIVATE_KEY=your_apple_music_private_key

# Publishing Stores
AMAZON_KDP_ACCESS_KEY=your_amazon_kdp_access_key
AMAZON_KDP_SECRET_KEY=your_amazon_kdp_secret_key
GOOGLE_BOOKS_API_KEY=your_google_books_api_key

# Payment Processing
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# =================================================================
# MONITORING & LOGGING
# =================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn

# =================================================================
# EMAIL CONFIGURATION
# =================================================================
# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
FROM_EMAIL=noreply@hardbanrecords.com

# =================================================================
# RATE LIMITING
# =================================================================
# Rate limit window (in milliseconds)
RATE_LIMIT_WINDOW=900000
# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# =================================================================
# SESSION CONFIGURATION
# =================================================================
# Session secret
SESSION_SECRET=your_session_secret_key

# =================================================================
# FILE UPLOAD LIMITS
# =================================================================
# Max file size in bytes (default: 50MB)
MAX_FILE_SIZE=52428800
# Max audio file size in bytes (default: 100MB)
MAX_AUDIO_FILE_SIZE=104857600
