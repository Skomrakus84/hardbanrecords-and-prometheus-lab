# HardbanRecords Backend - Production Environment Variables
# Copy to .env and fill in your actual values

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
DATABASE_URL=postgresql://postgres.your-project:your_password@aws-0-eu-north-1.pooler.supabase.com:6543/postgres

# =================================================================
# SUPABASE CONFIGURATION (GŁÓWNE STORAGE)
# =================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_BUCKET_NAME=hardbanrecords-files
SUPABASE_STORAGE_URL=https://your-project.storage.supabase.co/storage/v1/object/public/hardbanrecords-files
SUPABASE_REGION=eu-north-1

# =================================================================
# FILE UPLOAD - SUPABASE STORAGE LIMITS
# =================================================================
MAX_FILE_SIZE=52428800
MAX_AUDIO_FILE_SIZE=104857600
ALLOWED_AUDIO_FORMATS=mp3,wav,flac,aac,m4a,ogg
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp,gif
ALLOWED_DOCUMENT_FORMATS=pdf,doc,docx,txt,epub

# UWAGA: NIE UŻYWAMY AWS S3 - TYLKO SUPABASE STORAGE
# AWS_ACCESS_KEY_ID=NOT_NEEDED
# AWS_SECRET_ACCESS_KEY=NOT_NEEDED
# AWS_REGION=NOT_NEEDED
# AWS_S3_BUCKET=NOT_NEEDED

# =================================================================
# JWT CONFIGURATION
# =================================================================
JWT_SECRET=your_very_strong_jwt_secret_at_least_32_characters
REFRESH_TOKEN_SECRET=your_very_strong_refresh_token_secret_at_least_32_characters
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# =================================================================
# SERVER CONFIGURATION
# =================================================================
PORT=3001
NODE_ENV=production
CORS_ORIGIN=https://your-frontend-domain.com

# =================================================================
# AI SERVICES
# =================================================================
GOOGLE_API_KEY=your_google_ai_api_key
GROQ_API_KEY=your_groq_api_key

# =================================================================
# EXTERNAL INTEGRATIONS
# =================================================================
# Music Platforms
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
APPLE_MUSIC_KEY_ID=your_apple_music_key_id
APPLE_MUSIC_TEAM_ID=your_apple_music_team_id

# Publishing Stores
AMAZON_KDP_ACCESS_KEY=your_amazon_kdp_access_key
AMAZON_KDP_SECRET_KEY=your_amazon_kdp_secret_key
GOOGLE_BOOKS_API_KEY=your_google_books_api_key

# Payment Processing
STRIPE_SECRET_KEY=your_stripe_secret_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# =================================================================
# MONITORING & SECURITY
# =================================================================
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your_session_secret_key
